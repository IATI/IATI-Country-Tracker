#!monit

# mail will probably end up in spam so look there

set mailserver localhost
set alert krissd@gmail.com


# make sure web is running

check process dportal with pidfile /home/ctrack/D-Portal/dportal/production/dportal.pid
 start program = "/etc/init.d/dportal start"
 stop program  = "/etc/init.d/dportal stop"
 if failed port 1408 protocol http request "/" with timeout 30 seconds
 then restart
