cd `dirname $0`
cd ..

source /dportal/box/env.sh

if [ ! -z "$1" ] ; then

export PGDATABASE=$1

fi

echo " creating new $PGDATABASE database "


dropdb $PGDATABASE
createdb $PGDATABASE


psql -c "CREATE EXTENSION IF NOT EXISTS citext;" $PGDATABASE
psql -c "ALTER DATABASE $PGDATABASE OWNER TO $PGUSER;"
psql -c "GRANT ALL PRIVILEGES ON DATABASE $PGDATABASE TO $PGUSER;"
psql -c "GRANT CONNECT ON DATABASE $PGDATABASE TO readonly;"


bin/dstore_reset

psql -c "GRANT SELECT ON ALL TABLES IN SCHEMA public TO readonly" $PGDATABASE


