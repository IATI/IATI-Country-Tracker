cd "$(dirname "$(readlink -f "$0")")"

if [[ $# -eq 0 ]] ; then
	echo
	ls -1 ../bin
	echo
	echo "		Choose one of these scripts to run inside the vbox : "
	echo
	exit 0
fi

if [ ! -d "/vagrant" ]; then

	echo $@
#	vagrant up
	vagrant ssh -c " cd /host/vbox/ ; ./bin $* "

else

	export DSTORE_PG="/var/run/postgresql dstore"

	CMD=$1
	shift
	../bin/$CMD $@

fi
