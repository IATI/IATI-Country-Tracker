cd `dirname $0`

echo "bake"
node js/bake.js

EXORCIST=node_modules/exorcist/bin/exorcist.js
BROWSERIFY=node_modules/browserify/bin/cmd.js

echo "browserify"

$BROWSERIFY -g uglifyify -r ./js/ctrack.js:ctrack -d | $EXORCIST jslib/ctrack.js.map > jslib/ctrack.js


